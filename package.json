{
  "name": "graphql-typescript-apollo-starter",
  "version": "1.0.0",
  "description": "A starter template for an apollo graphql server with typescript",
  "main": "src/index.ts",
  "scripts": {
    "// build": "build the server for production",
    "build": "NODE_ENV='production'webpack",
    "// dev": "run the server in development mode, watch for changes and restart the server after each change",
    "dev": "NODE_ENV='development' concurrently --kill-others-on-fail \"webpack --watch\" \"npm run start:delay:watch\"",
    "// start": "start:* are commands start our server, watch it, or delay before watching it",
    "start": "node ./dist/server.js",
    "start:watch": "nodemon --watch dist -e js,ts,graphql,json npm start",
    "start:delay:watch": "wait-on --delay 6000 ./dist/server.js && npm run start:watch",
    "// test": "test:* are commands to run tests with jest",
    "test": "jest --forceExit --verbose --detectOpenHandles",
    "test:watch": "npm run test -- --watchAll",
    "// tslint": "the tslint is used to lint our typescript files",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "// gen": "gen:* are commands to generate assets from our server, typdefinitions and schemas",
    "gen:download-schema": "graphql get-schema",
    "gen:convert-schema-to-typescript": "graphql-schema-typescript generate-ts  --global=true --namespace=GQL --asyncResult=true --output=./src/__typedefs/graphqlTypes.d.ts ./src/__typedefs",
    "gen:typedefs": "npm run gen:download-schema && npm run gen:convert-schema-to-typescript"
  },
  "author": "liron-navon",
  "repository": "https://github.com/liron-navon/graphql-typescript-apollo-starter",
  "license": "ISC",
  "dependencies": {
    "apollo-server": "^2.0.5",
    "apollo-server-express": "^2.0.6",
    "cors": "^2.8.4",
    "express": "^4.16.3",
    "graphql": "^14.1.1",
    "graphql-scalar-types": "^2.0.0",
    "graphql-tools": "^3.1.1",
    "lodash": "^4.17.10",
    "subscriptions-transport-ws": "^0.9.14"
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/graphql": "^0.13.4",
    "@types/jest": "^23.3.1",
    "@types/node": "^10.7.1",
    "apollo": "^2.3.1",
    "clean-webpack-plugin": "^0.1.19",
    "concurrently": "^4.1.0",
    "graphql-schema-typescript": "^1.2.8",
    "jest": "^23.5.0",
    "jest-raw-loader": "^1.0.1",
    "nodemon": "^1.18.9",
    "ts-jest": "^23.1.4",
    "ts-loader": "^4.5.0",
    "tslint": "^5.12.1",
    "tslint-loader": "^3.5.4",
    "typescript": "^3.0.1",
    "wait-on": "^3.2.0",
    "webpack": "^4.17.1",
    "webpack-command": "^0.4.1",
    "webpack-node-externals": "^1.7.2"
  }
}
